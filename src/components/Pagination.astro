---
const { prevUrl, nextUrl }= Astro.props;


---


<nav aria-label="blog pages" class="flex flex-row">
    {
        prevUrl && <a href={prevUrl} class="ml-5 font-bold text-[#3D4FF5] dark:text-[#B2C6FE] hover:underline text-base flex flex-row items-center">artículos recientes</a>
    }
    {
        nextUrl && <a href={nextUrl} class="ml-5 font-bold text-[#3D4FF5] dark:text-[#B2C6FE] hover:underline text-base flex flex-row items-center">artículos anteriores</a>
    }
</nav>





