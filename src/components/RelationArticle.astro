---
import { formatDate } from "../scripts/dateFormatter";
import type { CollectionEntry } from "astro:content";

interface Props {
    relatedPosts: CollectionEntry<'blog'>[];
}

const { relatedPosts } = Astro.props;
---

{
    relatedPosts.map((post) => (
        <a href={post.slug} class="flex flex-col gap-3 px-6 text-center justify-center items-center font-medium text-base border-2 rounded-[6px] transition-colors duration-200 hover:border-[#3D4FF5] dark:hover:border-[#B2C6FE] w-[300px] h-[174px]">
            {post.data.title}
            <small class="text-xs">{post.data.author}&nbsp;Â·&nbsp;{formatDate(new Date(post.data.date))}</small>
        </a>
    ))
}
